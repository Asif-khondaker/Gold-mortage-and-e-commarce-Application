@model IEnumerable<GoldMortgageApp.Models.MortgageItem>

@{
    ViewBag.Title = "Mortgage_List";
}
<h2>Search Item</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("From", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="From" class="form-control" />

            </div>
        </div>

        <div class="form-group">
            @Html.Label("To", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="To" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />

            </div>
        </div>
    </div>
}



<h2>Mortgage List</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Customer Name")
        </th>
        <th>
            @Html.DisplayName("Mobile NO")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ItemQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Loan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaturityOfThisLoan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.MobileNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IssueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Loan)
        </td>
        @if(item.Id!=0)
        {

        <td>
            @Html.DisplayFor(modelItem => item.MaturityOfThisLoan)
        </td>
        <td>
          
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
           
        </td>
        }
        else
        {
            <td></td>
            <td></td>
        }
    </tr>
}

</table>
