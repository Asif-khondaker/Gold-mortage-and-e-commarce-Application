<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GoldMortgage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
				
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                   
                   
					 @if (Session["Admin"] == null && Session["Customer"] == null )
					 {
					 
					  <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Buy Products<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Products", "Products", "Home")</li>
								<li>@Html.ActionLink("Order Status", "Login", "Home")</li>

                            </ul>
                        </li>
						
						
					 
					 
					  
						 <li>@Html.ActionLink("Mortgage User", "UserLogin", "Home")</li>
                        

                     }
                   
					 @if (Session["Admin"] != null)
                     {


                       





					
   
	<li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage E-Commerce<b class="caret"></b></a>
        <ul class="dropdown-menu">
		 
			<li>@Html.ActionLink("Add Product", "Index", "Products")</li>
            <li>@Html.ActionLink("Add Product Category", "Index", "Categories")</li>
            <li>@Html.ActionLink("See Order", "OrderList", "Admins")</li>
            <li>@Html.ActionLink("Order List(Delivered)", "DeliveredProductList", "Admins")</li>
			 <li>@Html.ActionLink("Add Customer Location", "Index", "Locations")</li>

        </ul>
    </li>
	 <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage Mortgage System<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                 <li>@Html.ActionLink("Deposite", "Index", "Deposites")</li>
								<li>@Html.ActionLink("Mortgage List", "Index", "MortgageItems")</li>

                            </ul>
                        </li>

						<li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mortgage Customer<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Add Mortgage Customer", "CustomerList", "Customers")</li>
                                <li>@Html.ActionLink("Customer Info", "CustomerInfo", "Customers")</li>
                                <li>@Html.ActionLink("Red Listed Customer", "RedListedCustomer", "Customers")</li>

                            </ul>
                        </li>
   
	


                     }
		@if (Session["Customer"] != null)

          {
                    
					 
					 <li>@Html.ActionLink("Personal Info", "PersonalInfo", "Home")</li>
					 
					 <li>@Html.ActionLink("Add Payment", "BankDeposite", "Deposites")</li>
                    
                   
					
					
		}
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="font-family:'Times New Roman'">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jahad&Asif</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
