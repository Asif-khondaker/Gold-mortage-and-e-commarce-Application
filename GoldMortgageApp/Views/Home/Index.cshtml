@model IEnumerable<GoldMortgageApp.Models.Product>
@{
    ViewBag.Title = "Home Page";
    int count = 0;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: 150px;
        }


    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>

<div class="jumbotron">
    <img src="~/DesignImage/Shop.jpg" width="1000" height="400"/>
</div>
@if (Session["Admin"] == null && Session["Customer"] == null )
					 {
<div class="row">

    <h2 class="text-center"><b>New Arrival</b></h2>

    <br />
    @foreach (var item in Model)
    {
        if(@count<6)
        {
            count = count + 1;
                    <div class="gallery">
                        <a href="@Url.Action("Details")/@item.Id">
                            <img src="~/Image/@item.ProductFile" alt="5Terre" width="600" height="400">
                        </a>
                        <div class="desc">@item.Name</div>
                    </div>
        }

    }
</div>
}