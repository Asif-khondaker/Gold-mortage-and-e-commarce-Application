@model IEnumerable<GoldMortgageApp.Models.ViewCart>
@{
    int count = 0;
}
<br />
<br />
<h2>Total Payable: @ViewBag.TotalPayable tk.</h2>
<hr />
<h3>Your Shopping Cart</h3>

<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Product Image")
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    count = count + 1;
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            <a href="~/Image/@item.ProductFile">
                <img src="~/Image/@item.ProductFile" alt="Click" width="150" height="150">
            </a>
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.ActionLink("Delete From Cart", "DeleteFromCart", new { id = item.Id })|
           @Html.ActionLink("Change Quantity", "ChangeQuantity", new { id = item.Id })
        </td>
    </tr>
}

</table>
<br />
@if(count!=0)
{
<div>
   <input type="button" class="btn btn-info" value="Proceed Order" onclick="location.href='@Url.Action("CustomerInfo","Home")'"/>
</div>
}

