@model IEnumerable<GoldMortgageApp.Models.Product>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: 150px;
        }


    div.desc {
        padding: 15px;
        text-align: center;
    }
</style>
<div class="row">
    @{
        ViewBag.Title = "Product";
        int count = 0;
    }
    <br />
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Search By Catagory</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Select A Category", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                  
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <hr />


    <h2 class="text-center" ><b>Product List</b></h2>

    <br />
    @foreach (var item in Model)
    {
          
            <div class="gallery">
                <a href="@Url.Action("Details")/@item.Id">
                    <img src="~/Image/@item.ProductFile" alt="5Terre" width="600" height="400">
                </a>
                <div class="desc">@item.Name</div>
            </div>
        

    }
</div>