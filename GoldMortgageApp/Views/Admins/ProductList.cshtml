@model IEnumerable<GoldMortgageApp.Models.Order>
<br />
<p>
    @Html.ActionLink("Back To The Order List", "OrderList")
</p>
<br />
<hr />
<h3>Product List</h3>
<table class="table">
    <tr>
     
        <th>
            @Html.DisplayName("Product Id")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
      
        <th>
            @Html.DisplayName("Product Image")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
      
       
      
        <td>
            <a href="~/Image/@item.Product.ProductFile">
                <img src="~/Image/@item.Product.ProductFile" alt="Click" width="150" height="150">
            </a>
        </td>
       
    </tr>
}

</table>
